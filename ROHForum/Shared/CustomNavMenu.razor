@using ROHForum.Data

<ul class="nav col">
    <li class="nav-item">
        <div class="dropdown">
            <button class="customButton mx-2 px-4">All Communities</button>
            <div class="dropdown-content">


                @foreach(var tag in allTags){
                    <button class="customButton my-2 px-4" @onclick='()=> _navManager.NavigateTo("/posts/tag/" + tag.TagName)'>@tag.TagName</button>

                }

            </div>
        </div>
    </li>

</ul>
<ul class="nav justify-content-end">
    <li class="nav-item">
        <button class="px-4 mx-2 customButton" aria-current="page" @onclick='()=> _navManager.NavigateTo("/")'>Home</button>
    </li>
    <li class="nav-item">
        <button class="px-4 mx-2 customButton" @onclick="GoToTopPosts">Top Posts</button>
    </li>
    <li class="nav-item">
        <button class="px-4 mx-2 customButton" href="#">New Posts</button>
    </li>
    <li class="nav-item">
        <div class="dropdown">
            <button class="customButton mx-2 px-4">Posts</button>
            <div class="dropdown-content">
                <button class="customButton my-2 px-4 " @onclick='()=> _navManager.NavigateTo("/posts/top")'>Top Posts</button>
                <button class="customButton my-2 px-4" href="#">New Posts</button>
                <button class="customButton my-2 px-4" href="#">Best Posts</button>
            </div>
        </div>
    </li>

</ul>



@code {
    public List<TagModel> allTags = new();

    public void GoToTopPosts()
    {
        _navManager.NavigateTo("/posts/top");
    }

    protected override void OnInitialized()
    {
        allTags = _tagService.GetAllTagPosts();
    }

    

}

<style>
    .dropbtn {
        background-color: #04AA6D;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: transparent;
        min-width: 160px;
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ddd;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #3e8e41;
    }
</style>