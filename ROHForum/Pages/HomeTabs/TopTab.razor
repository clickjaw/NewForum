@page "/posts/top"

<h3>TopTab</h3>


<div>
    <h1>Top Content</h1>


    <div class="container" style="border:black 5px dashed;">
        @foreach(var post in posts)
        {
            <div class="row" style="border:black 5px solid;">
                <div class="col-md-2">
                    <div class="row"><img src=""/> @post.Upvote</div>
                    <div class="row"><img src="" /> @post.Downvote</div>
                </div>
                <p>@post.Title</p>
                <div>
                    
                    </div>
            </div>
        }
    </div>



</div>

@code {
    public List<PostsModel> posts = new();

    protected override void OnInitialized()
    {
        posts = _postService.GetTopPosts();
    }

}
